%h1= @carpenter.user.name
%h1

- @carpenter.products.each do |product|
	%p= product.title
	%span= image_tag(product.banner_url) if product.banner?

- if @carpenter.recommendations.any?
	- @carpenter.recommendations.each do |recommendation|
		= render recommendation

= form_for [@carpenter, @carpenter.recommendations.build], html: { class: 'form-horizontal' } do |f|
	.form-group
		= f.label :title, class: 'control-label'
		= f.text_field :title, class: 'form-control'
	.form-group
		= f.label :body, class: 'control-label'
		= f.text_area :body, class: "form-control"

	.form-actions
		= f.submit class: "btn btn-success"